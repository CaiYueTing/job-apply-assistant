{
    "manifest_version": 2,
    "version": "1.0.0",
    "icons" :{
    },
    "description": "協助求職者更認識公司的背景",
    "browser_action":{
        "default_popup": "./html/popup.html",
        "default_title": "job seeker helper"
    },
    "name": "job seeker helper",
    "content_scripts": [
        {
            "matches":["*://www.104.com.tw/job/*"],
            "js":[
                "./js/lib/jquery-3.3.1.min.js",
                "./js/content.js"
            ],
            "css":[
                "./css/helper.css"
            ]
        }
    ],
    "background": {
        "scripts": ["./js/background.js"]
    },
    "permissions":[
        "tabs",
        "storage"
    ]
}